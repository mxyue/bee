
if [ ! -f run ]; then
echo 'run must be run within its container folder' 1>&2
exit 1
fi

CURDIR=`pwd`
OLDGOPATH="$GOPATH"

ALLGOPATH=${CURDIR}":"${OLDGOPATH}
export GOPATH="$ALLGOPATH"

gofmt -w src

go install bee

if [ $? -eq 0 ];then
    echo 'run>>>'
    ./bin/bee
fi

#export GOPATH="$OLDGOPATH"
#source ~/.bash_profile 

echo 'finished'



